{
  "manifest_version": 3,
  "name": "Read-Y",
  "description": "Enhance reading experience on any web page",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["dark-theme.css"],
      "js": ["dark-mode.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
